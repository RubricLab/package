{
	"name": "@rubriclab/package",
	"version": "0.0.97",
	"repository": {
		"type": "git",
		"url": "https://github.com/RubricLab/package.git"
	},
	"bin": {
		"pkg": "./scripts/cli.ts"
	},
	"private": false,
	"simple-git-hooks": {
		"post-commit": "pkg post-commit"
	},
	"scripts": {
		"postinstall": "pkg post-install",
		"prepare": "pkg prepare",
		"bleed": "bun x npm-check-updates -u",
		"format": "bun x biome format --write .",
		"lint": "bun x biome check .",
		"lint:fix": "bun x biome lint . --write --unsafe",
		"clean": "rm -rf .next; rm bun.lockb; rm -rf node_modules"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"publishConfig": {
		"access": "public"
	}
}
