{
	"name": "@rubriclab/package",
	"version": "0.0.6",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"bin": {
		"rubriclab-precommit": "./scripts/precommit.ts"
	},
	"private": false,
	"simple-git-hooks": {
		"precommit": "bun run precommit"
	},
	"scripts": {
		"precommit": "bun run ./scripts/precommit.ts",
		"postinstall": "bun run ./scripts/postinstall.ts",
		"prepare": "bun run simple-git-hooks",
		"bleed": "bunx npm-check-updates -u && bun i",
		"format": "bunx biome format --write .",
		"lint": "bunx biome check .",
		"lint:fix": "bunx biome lint ."
	},
	"dependencies": {
		"simple-git-hooks": "^2.8.1"
	}
}
